<h1>My Classrooms</h1>
<br />
<div class="row">
    {{#each myRooms}}
        <div class="col-sm-3">
            <div class="card">
                <div class="card-block">
                    <a href="/rooms/{{id}}"><h4 class="card-title">{{name}}</h4></a>
                    <p class="card-text"><small class="text-muted">Last updated: Today</small></p>
                </div>
            </div>
        </div>
    {{else}}
        You don't have access to any classrooms yet. <a href="/rooms/create">Create one</a> to get started!
    {{/each}}
</div>
